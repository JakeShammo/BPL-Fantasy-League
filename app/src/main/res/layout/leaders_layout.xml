<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/rankT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textColor="#000"

        android:layout_marginLeft="10dp"
        android:text="Rank"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/rankTno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/match"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:layout_marginLeft="25dp"
        android:text="1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/leadName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textColor="#000"

        android:layout_marginLeft="75dp"
        android:text="My Team"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/leadOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teams"
        android:layout_marginTop="50dp"
        android:textColor="#000"
        android:layout_marginLeft="75dp"
        android:text="Owner: Jake"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/leadPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/pName"
        android:layout_marginLeft="300dp"
        android:textColor="#000"

        android:text="Points"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/leadPno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/pName"
        android:layout_marginLeft="315dp"
        android:textColor="#000"

        android:text="234"
        android:textSize="26dp" />


</RelativeLayout>