<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jake.fantasy.SignInActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="570dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/topbar" />

    <EditText
        android:id="@+id/nameinp"
        android:layout_width="241dp"
        android:layout_height="65dp"
        android:layout_marginTop="170dp"
        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/emailinp"
        android:layout_width="241dp"
        android:layout_height="64dp"
        android:layout_marginTop="230dp"
        android:layout_toRightOf="@+id/name2"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passinp"
        style="@android:style/Widget.EditText"
        android:layout_width="241dp"
        android:layout_height="64dp"
        android:layout_marginTop="290dp"
        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/conpassinp"
        style="@android:style/Widget.EditText"
        android:layout_width="241dp"
        android:layout_height="64dp"
        android:layout_marginTop="370dp"
        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/ca"
        android:layout_width="114dp"
        android:layout_height="55dp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="145dp"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:text="Create Account"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Password :"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/pa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Confirm\nPassword :"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:text="Email         :"
        android:textColor="#000"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Name        :"
        android:textColor="#000"
        android:textSize="30dp"/>
</RelativeLayout>
