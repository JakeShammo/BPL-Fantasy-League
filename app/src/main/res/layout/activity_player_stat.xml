<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jake.fantasy.PlayerStat">

    <ImageView
        android:id="@+id/playerpic"
        android:layout_width="119dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher_round"/>
    <TextView
        android:id="@+id/statName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/playerpic"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/statRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Name"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@id/playerpic"
        android:layout_marginLeft="13dp"
        android:textColor="#000"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/statTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Name"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/playerpic"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/statScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Points: 125"
        android:layout_toRightOf="@id/playerpic"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:textSize="26dp"/>




    <ListView
        android:id="@+id/statList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerpic"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        />


</RelativeLayout>
