<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="com.example.jake.fantasy.CreatingTeam1">

        <TextView
            android:id="@+id/nameteam1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:hint="TeamName"
            android:textSize="30dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/viewStats1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:text="View Stats"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFF"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/Motto1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="5dp"
            android:hint="Team Motto"
            android:textSize="15dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/points1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="5dp"
            android:hint="Points"
            android:textSize="22dp"
            android:textColor="#000"/>



        <TextView
            android:id="@+id/bats1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_weight="1"
            android:text="Batsmen:"
            android:textColor="#000"
            android:textSize="30dp" />
        <ListView
            android:id="@+id/batList2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            />
        <TextView
            android:id="@+id/wkts1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/batList2"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="WktKeeper:"
            android:textSize="30dp" />

        <ListView
            android:id="@+id/wktList2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wkts1"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/alls1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wktList2"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="AllRounders:"
            android:textSize="30dp" />
        <ListView
            android:id="@+id/allList2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alls1"
            android:layout_marginTop="10dp"/>



        <TextView
            android:id="@+id/bowl1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allList2"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="Bowlers:"
            android:textSize="30dp" />
        <ListView
            android:id="@+id/bowlList2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bowl1"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="10dp"
            />




    </RelativeLayout>



</ScrollView>