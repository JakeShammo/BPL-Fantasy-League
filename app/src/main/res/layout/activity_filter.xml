<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jake.fantasy.FilterActivity">
    <TextView
        android:id="@+id/filterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Set filter parameters"
        android:textColor="#000"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/nameFilter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:text="Name:"
        android:textColor="#000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/nameFilterInp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="180dp"
        android:layout_weight="1"
        android:textColor="#000"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/countryFilter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_weight="1"
        android:text="Country:"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/teamFiler"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_weight="1"
        android:text="Team: "
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/maxPrice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_weight="1"
        android:text="Max Price:"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/minPrice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_weight="1"
        android:text="Min Price"
        android:textColor="#000"
        android:textSize="25dp" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spinnerCountry"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="120dp"
        android:hint="Bangladesh"
        android:textColorHint="#000"
        android:textSize="20dp" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spinnerTeam"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="170dp"
        android:hint="Dha Dyn"
        android:textColorHint="#000"
        android:textSize="20dp" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spinnerMaxPrice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="220dp"
        android:hint="15"
        android:textColorHint="#000"
        android:textSize="20dp" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spinnerMinPrice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="270dp"
        android:hint="5"
        android:textColorHint="#000"
        android:textSize="20dp" />
    <Button
        android:id="@+id/filterPage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="350dp"
        android:text="Filter Results"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:background="@color/colorPrimaryDark"/>

</RelativeLayout>
